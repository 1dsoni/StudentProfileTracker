<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="16dp"
            android:src="@drawable/default_faculty_icon"
            android:id="@+id/circle_iv_profilepic_faccultyconnect_listitem_id"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_profilepic_faccultyconnect_listitem_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:maxLines="1"
            android:layout_weight="1"
            android:id="@+id/tv_name_faccultyconnect_listitem_id"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_designation_faccultyconnect_listitem_id"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_subjects_faccultyconnect_listitem_id"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>