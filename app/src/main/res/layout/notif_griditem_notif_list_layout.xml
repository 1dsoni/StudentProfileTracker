<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notificationtype_grid_item_id"
                android:textColor="#000000"
                android:maxLines="2"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:background="#c7b71e1e"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/more_options_grid_item_menu_id"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:id="@+id/notification_icon_image_id"
                android:src="@drawable/ic_event_note_black_24dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/carview_sub_name_gridview_item_id" />

            <android.support.v7.widget.CardView
                android:id="@+id/carview_sub_name_gridview_item_id"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:elevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sub_name_grid_item_id"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>
            <View
                android:visibility="invisible"
                android:background="#000"
                android:layout_centerHorizontal="true"
                android:id="@+id/view_line_sub_item_grid_id"
                android:layout_below="@id/carview_sub_name_gridview_item_id"
                android:layout_width="match_parent"
                android:layout_height="4px"></View>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/sub_count_grid_item_id"
                android:layout_below="@id/view_line_sub_item_grid_id"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:background="#000"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/view_line_below_count_sub_item_grid_id"
                android:layout_below="@id/sub_count_grid_item_id"
                android:layout_width="match_parent"
                android:layout_height="4px"></View>
            <TextView
                android:id="@+id/sub_date_grid_item_id"
                android:textColor="#fff"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/view_line_below_count_sub_item_grid_id"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#000"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/view_line_below_date_sub_item_grid_id"
                android:layout_below="@id/sub_date_grid_item_id"
                android:layout_width="match_parent"
                android:layout_height="4px"></View>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>