<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.diwanshusoni.studentprofiletracker.Activities.NotificationItemInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_image_notif_id"
                    android:visibility="gone"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/def_padding"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp" />

                <EditText
                    android:focusable="false"
                    android:id="@+id/et_description_notif_id"
                    android:background="@null"
                    android:layout_below="@id/iv_image_notif_id"
                    android:layout_marginTop="@dimen/def_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:autoLink="web"
                    android:id="@+id/et_useful_links_notif_id"
                    android:layout_below="@id/et_description_notif_id"
                    android:layout_marginTop="@dimen/def_padding"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
